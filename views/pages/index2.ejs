<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <title><%= title %></title>

    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="/css/materialize.min.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
  </head>

  <body>
    <header>
      <div class="row">
        <div class="col s12 blue darken-2 title-container">
          <h2 class="center-align title-item blue-grey-text text-lighten-5"><%= title %></h2>
        </div>
      </div>
    </header>

    <main class="container">
      <div class="row">
        <div class="col s12">
          <table class="bordered striped">
            <thead>
              <tr>
                <td>Sprite</td>
                <td>Name</td>
                <td>Pokedex Number</td>
              </tr>
            </thead>

            <tbody>
              <% data.forEach((pokemon) => { %>
                <tr>
                  <td>
                    <a href="/pokemon/<%= pokemon.id %>">
                      <img src="<%= pokemon.image_url %>" alt="<%= pokemon.name %>" />
                    </a>
                  </td>
                  <td><%= pokemon.name %></td>
                  <td><%= pokemon.id %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

    <footer class="page-footer blue darken-2">
      <div class="footer-copyright center-align blue darken-3">
        <small>Copyright Â© 2016 Galvanize</small>
      </div>
    </footer>

    <script src="/js/jquery-3.0.0.min.js"></script>
    <script src="/js/materialize.min.js"></script>
  </body>
</html>
